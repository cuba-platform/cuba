<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd">
    <data>
        <instance id="taskDc" class="com.haulmont.cuba.core.entity.ScheduledTask" view="_local">
            <loader/>
        </instance>
    </data>

    <layout spacing="true">
        <slider id="sliderDefault"/>
        <slider id="sliderDouble" datatype="double"/>
        <slider id="sliderInt" datatype="int"/>
        <slider id="sliderDecimal" datatype="decimal"/>
        <slider id="sliderLong" datatype="long"/>
        <slider id="sliderWithContainer" dataContainer="taskDc" property="period"/>
    </layout>
</window>
