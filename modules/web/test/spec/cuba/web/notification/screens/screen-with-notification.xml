<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd">
    <actions>
        <action id="notificationAction"/>
    </actions>
    <facets>
        <notification id="testNotification"
                      type="HUMANIZED"
                      caption="Notification Facet Test"
                      description="Description from XML"
                      delay="3000"
                      contentMode="HTML"
                      position="TOP_CENTER"
                      styleName="notification-facet-style"/>

        <notification id="notificationActionSub"
                      onAction="notificationAction"
                      caption="Notification Action subscription"/>

        <notification id="notificationButtonSub"
                      onButton="notificationButton"
                      caption="Notification Button subscription"/>
    </facets>
    <layout>
        <button id="notificationButton"/>
    </layout>
</window>