<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-4.3.xsd
           http://www.springframework.org/schema/mvc
           http://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <mvc:annotation-driven/>

    <context:annotation-config/>

    <context:component-scan base-package="com.haulmont.cuba.web.controllers"/>
    <!--
    REST v1 disabled by default since 6.10

    <context:component-scan base-package="com.haulmont.cuba.restapi"/>
    -->

    <!-- Override web implementation bean in main context -->
    <bean id="cuba_Events" class="com.haulmont.cuba.core.sys.EventsImpl"/>

    <!-- Supports LastModified interface for MVC controllers classes -->
    <bean class="com.haulmont.cuba.web.controllers.CachedAnnotationMethodHandlerAdapter"/>

    <!-- Log all exceptions that occur in controllers-->
    <bean id="cuba_LoggingHandlerExceptionResolver"
          class="com.haulmont.cuba.web.sys.LoggingHandlerExceptionResolver">
    </bean>
</beans>