<window
    xmlns="http://www.haulmont.com/schema/cuba/gui/window.xsd"
    messagesPack="com.haulmont.cuba.web.app.ui.security.group.browse"
    class="com.haulmont.cuba.web.app.ui.security.group.browse.GroupBrowser"
>
    <metadataContext>
        <deployViews name="/com/haulmont/cuba/web/app/ui/security/group/group.views.xml"/>
    </metadataContext>

    <dsContext>
        <hierarchicalDatasource
            id="groups"
            class="com.haulmont.cuba.security.entity.Group"
            view="group.browse"
            hierarchyProperty="parent"
        >
            <query>
                <![CDATA[select g from sec$Group g]]>
            </query>
        </hierarchicalDatasource>

        <collectionDatasource
            id="users"
            class="com.haulmont.cuba.security.entity.User"
            view="group.browse">
            <query>select u from sec$User u where u.group.id = :ds$groups</query>
        </collectionDatasource>

        <collectionDatasource
            id="constraints"
            class="com.haulmont.cuba.security.entity.Constraint"
            view="group.browse">
            <query>select c from sec$Constraint c where c.group.id = :ds$groups</query>
        </collectionDatasource>

    </dsContext>

    <layout>
        <vbox>
            <split orientation="horizontal" pos="30">
                <vbox>
                    <tree id="groups">
                        <treechildren datasource="groups" captionProperty="name" hierarchyProperty="parent"/>
                    </tree>
                </vbox>
                <vbox expand="group-editor">
                    <!--<hbox>-->
                        <!--<label value="msg://group.name"/>-->
                        <!--<textField id="group.name" datasource="groups" property="name"/>-->
                    <!--</hbox>-->
                    <tabsheet id="group-editor">
                        <tab id="users" caption="msg://tabsheet.users">
                            <vbox expand="users" spacing="true">
                                <!--<hbox>-->
                                    <!--<checkBox id="showDescendants"/>-->
                                    <!--<label value="msg://showDescendants"/>-->
                                <!--</hbox>-->
                                <table id="users">
                                    <columns>
                                        <column id="name" caption="Name"/>
                                        <column id="login" caption="Login"/>
                                        <column id="activeDirectoryUser" caption="ActiveDirectory User"/>
                                    </columns>
                                    <rows datasource="users"/>
                                </table>
                                <hbox align="MIDDLE_RIGHT">
                                    <button id="users.create" action="users.create"/>
                                    <button id="users.edit" action="users.edit"/>
                                    <button id="users.moveToGroup" action="users.moveToGroup"/>
                                </hbox>
                            </vbox>
                        </tab>
                        <tab id="constraints" caption="msg://tabsheet.constraints">
                            <vbox expand="constraints" spacing="true">
                                <table id="constraints">
                                    <columns>
                                        <column id="entityName" caption="msg://entity"/>
                                        <column id="whereClause" caption="msg://where"/>
                                    </columns>
                                    <rows datasource="constraints"/>
                                </table>
                                <hbox align="MIDDLE_RIGHT">
                                    <button id="constraints.create" action="constraints.create"/>
                                    <button id="constraints.edit" action="constraints.edit"/>
                                    <button id="constraints.remove" action="constraints.remove"/>
                                </hbox>
                            </vbox>
                        </tab>
                    </tabsheet>
                </vbox>
            </split>
        </vbox>
    </layout>
</window>
