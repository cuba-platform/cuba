<window xmlns="http://schemas.haulmont.com/cuba/4.0/window.xsd">
    <layout>
        <vbox id="filter-pane" stylename="edit-area" margin="true" spacing="true">
            <label value="msg://com.haulmont.cuba.web/label.SearchParameters" stylename="h2"/>
            <grid spacing="true" expandable="false">
                <columns>
                    <column flex="1"/>
                    <column flex="1"/>
                    <column flex="1"/>
                    <column flex="1"/>
                    <column flex="1"/>
                    <column flex="1"/>
                </columns>
                <rows>
                    <row>
                        <label control="createdFrom" value="msg://createdFrom"/>
                        <dateField id="createdFrom"/>

                        <label control="createdTo" value="msg://createdTo"/>
                        <dateField id="createdTo"/>

                        <label control="object" value="msg://entity"/>
                        <lookupField id="object"/>
                    </row>
                </rows>
            </grid>
            <hbox align="MIDDLE_LEFT" spacing="true">
                <button id="apply" icon="icons/search.png"/>
                <button id="clear" icon="icons/clear.png"/>
            </hbox>
        </vbox>
    </layout>
</window>