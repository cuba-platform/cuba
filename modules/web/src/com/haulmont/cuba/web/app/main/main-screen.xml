<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="mainMsg://application.caption">

    <layout>
        <hbox id="horizontalWrap"
              expand="workArea"
              stylename="c-sidemenu-layout"
              height="100%"
              width="100%">
            <vbox id="sideMenuPanel"
                  spacing="true"
                  stylename="c-sidemenu-panel"
                  expand="sideMenu"
                  width="250px"
                  height="100%"
                  margin="false,false,true,false">
                <hbox id="appTitleBox"
                      spacing="true"
                      stylename="c-sidemenu-title"
                      width="100%">
                    <label id="appTitleLabel"
                           align="MIDDLE_CENTER"
                           value="mainMsg://application.logoLabel"/>
                </hbox>
                <image id="logoImage"
                       stylename="c-app-icon"
                       align="MIDDLE_CENTER"
                       scaleMode="SCALE_DOWN"/>
                <hbox id="userInfoBox"
                      align="MIDDLE_CENTER"
                      spacing="true"
                      margin="true"
                      expand="userIndicator">
                    <userIndicator id="userIndicator"
                                   align="MIDDLE_CENTER"/>
                    <newWindowButton id="newWindowButton"
                                     description="mainMsg://newWindowBtnDescription"
                                     icon="app/images/new-window.png"/>
                    <userActionsButton id="userActionsButton"/>
                </hbox>
                <timeZoneIndicator id="timeZoneIndicator"
                                   align="MIDDLE_CENTER"/>
                <sideMenu id="sideMenu"
                          width="100%"/>
                <ftsField id="ftsField"
                          width="100%"/>
            </vbox>
            <workArea id="workArea"
                      height="100%">
                <initialLayout spacing="true" margin="true">
                </initialLayout>
            </workArea>
        </hbox>
    </layout>
</window>