<composite xmlns="http://schemas.haulmont.com/cuba/screen/composite.xsd">
    <vbox id="rootPanel"
          expand="propertiesForm"
          margin="true"
          spacing="true"
          width="100%">
        <hbox id="categoryFieldBox" width="100%" expand="categoryField" spacing="true">
            <label id="categoryFieldLabel" value="msg://dynamicAttributes.category" align="MIDDLE_LEFT"/>
            <lookupField id="categoryField" captionProperty="localeName"/>
        </hbox>
        <form id="propertiesForm" width="100%"/>
    </vbox>
</composite>