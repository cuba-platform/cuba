<window
        xmlns="http://www.haulmont.com/schema/cuba/gui/window.xsd"
        class="com.haulmont.cuba.web.ui.report.edit.ReportEditor"
        messagesPack="com.haulmont.cuba.web.ui.report"
        datasource="reportDs"
        caption="msg://reportEditor"
        focusComponent="generalFrame.propertiesFieldGroup"
        >

    <dsContext>
        <datasource
                id="reportDs"
                class="com.haulmont.cuba.report.Report"
                view="report.edit">
            <collectionDatasource id="parametersDs" property="inputParameters"/>
            <collectionDatasource id="valuesFormatsDs" property="valuesFormats"/>
            <collectionDatasource id="rolesDs" property="roles"/>
            <collectionDatasource id="reportScreensDs" property="reportScreens"/>
            <collectionDatasource id="templatesDs" property="templates"/>
            <hierarchicalDatasource id="treeDs" property="bands" hierarchyProperty="parentBandDefinition">
                <collectionDatasource id="dataSetsDs" property="dataSets"/>
            </hierarchicalDatasource>
        </datasource>

        <collectionDatasource id="groupsDs" class="com.haulmont.cuba.report.ReportGroup" view="_local">
            <query>
                <![CDATA[ select rg from report$ReportGroup rg order by rg.createTs asc ]]>
            </query>
        </collectionDatasource>

    </dsContext>
    <layout expand="tabsheet">
        <tabsheet id="tabsheet">
            <tab id="generalTab" caption="msg://generalTab">
                <iframe src="/com/haulmont/cuba/web/ui/report/edit/tabs/general.xml" id="generalFrame"/>
            </tab>
            <tab id="securityTab" caption="msg://securityTab">
                <iframe src="/com/haulmont/cuba/web/ui/report/edit/tabs/security.xml" id="securityFrame"/>
            </tab>
            <tab id="localesTab" caption="msg://localesTab">
                <iframe src="/com/haulmont/cuba/web/ui/report/edit/tabs/locales.xml" id="localesFrame"/>
            </tab>
        </tabsheet>
        <iframe id="windowActions" src="/com/haulmont/cuba/gui/edit-window.actions.xml"/>
    </layout>
</window>
