<window
        xmlns="http://www.haulmont.com/schema/cuba/gui/window.xsd"
        class="com.haulmont.cuba.web.ui.report.valueformat.edit.ValueFormatEditor"
        messagesPack="com.haulmont.cuba.web.ui.report"
        datasource="valuesFormatsDs"
        caption="msg://formatsEdit"
        focusComponent="formatFields"
        >

    <dsContext>
        <datasource
                id="valuesFormatsDs"
                class="com.haulmont.cuba.report.ReportValueFormat"
                view="report.edit">
        </datasource>
    </dsContext>
    <#assign width = 200>
    <layout expand="windowActions">
        <vbox margin="true" stylename="edit-area">
            <fieldGroup id="formatFields" datasource="valuesFormatsDs">
                <column flex="1">
                    <field id="valueName" required="true" caption="msg://valuesFormats.name" width="${width}"
                           requiredMessage="msg://valueNameMsg"/>
                    <field id="formatString" required="true"  caption="msg://valuesFormats.format" width="${width}"
                           maxLength="255" custom="true" requiredMessage="msg://formatStringMsg"/>
                </column>
            </fieldGroup>
        </vbox>
        <iframe id="windowActions" src="/com/haulmont/cuba/gui/edit-window.actions.xml"/>
    </layout>
</window>
