<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="com.haulmont.cuba.gui.components.filter.dateinterval.DateIntervalEditor"
        messagesPack="com.haulmont.cuba.gui.components.filter.dateinterval">

    <dsContext/>

    <actions>
        <action id="windowCommit" invoke="commit" caption="mainMsg://actions.Ok" primary="true"/>
        <action id="windowClose" invoke="close" caption="mainMsg://actions.Cancel"/>
    </actions>

    <layout spacing="true" expand="mainBox">
        <hbox id="mainBox" spacing="true">
            <optionsGroup id="typeOptionsGroup"/>
            <hbox height="AUTO" spacing="true">
                <textField id="numberField" width="70px" required="true" requiredMessage="msg://fillNumber"/>
                <lookupField id="timeUnitLookup" width="130px" required="true" requiredMessage="msg://fillTimeUnit"/>
                <checkBox id="includingCurrentCheckBox" caption="msg://includingCurrent" align="MIDDLE_LEFT"/>
                <lookupField id="predefinedIntervalsLookup" width="250px" required="true" requiredMessage="msg://fillPredefinedInterval"/>
            </hbox>
        </hbox>
        <frame id="windowActions" screen="editWindowActions"/>
    </layout>
</window>