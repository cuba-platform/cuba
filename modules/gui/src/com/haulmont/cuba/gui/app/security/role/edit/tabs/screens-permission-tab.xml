<window xmlns="http://schemas.haulmont.com/cuba/5.0/window.xsd"
        messagesPack="com.haulmont.cuba.gui.app.security.role.edit"
        class="com.haulmont.cuba.gui.app.security.role.edit.tabs.ScreenPermissionsFrame">

    <companions>
        <web class="com.haulmont.cuba.web.app.ui.security.role.ScreenPermissionsFrameCompanion"/>
        <desktop class="com.haulmont.cuba.desktop.app.security.role.ScreenPermissionsFrameCompanion"/>
    </companions>

    <dsContext>
        <collectionDatasource id="screenPermissionsDs"
                              class="com.haulmont.cuba.security.entity.Permission"
                              view="role.edit"
                              datasourceClass="com.haulmont.cuba.gui.security.RestorablePermissionDatasource">
            <query>select p from sec$Permission p where p.role.id = :ds$roleDs and p.type = 10</query>
        </collectionDatasource>

        <collectionDatasource id="screenPermissionsTreeDs"
                              class="com.haulmont.cuba.gui.security.entity.BasicPermissionTarget"
                              view="_local"
                              datasourceClass="com.haulmont.cuba.gui.security.ScreenPermissionTreeDatasource">
        </collectionDatasource>
    </dsContext>

    <layout>
        <hbox expand="screenPermissionsTree" margin="true" spacing="true" width="100%" height="100%">
            <treeTable id="screenPermissionsTree" height="100%">
                <columns>
                    <column id="caption" caption="msg://target"/>
                    <column id="permissionVariant" caption="msg://value"/>
                </columns>
                <rows datasource="screenPermissionsTreeDs"/>
            </treeTable>

            <groupBox width="250" height="100%" caption="msg://permissions">
                <vbox id="selectedScreenPanel" width="100%" height="100%" visible="false" expand="checkBoxes">
                    <label property="caption" datasource="screenPermissionsTreeDs" stylename="h2"/>
                    <hbox id="checkBoxes">
                        <checkBox id="allowCheckBox" caption="msg://checkbox.allow" width="100px"/>
                        <checkBox id="disallowCheckBox" caption="msg://checkbox.deny" width="100px"/>
                    </hbox>
                </vbox>
            </groupBox>
        </hbox>
    </layout>
</window>