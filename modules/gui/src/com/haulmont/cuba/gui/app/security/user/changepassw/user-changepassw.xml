<window
        xmlns="http://schemas.haulmont.com/cuba/5.2/window.xsd"
        datasource="userDs"
        caption="msg://caption"
        class="com.haulmont.cuba.gui.app.security.user.changepassw.UserChangePassw"
        messagesPack="com.haulmont.cuba.gui.app.security.user.changepassw"
        focusComponent="passwField"
        >
    <dsContext>
        <datasource id="userDs"
                    class="com.haulmont.cuba.security.entity.User"
                    view="user.changepassw">
        </datasource>
    </dsContext>

    <layout spacing="true">
        <grid spacing="true">
            <columns>
                <column flex="1"/>
                <column flex="1"/>
            </columns>
            <rows>
                <row>
                    <label id="passwLab" value="msg://password"/>
                    <passwordField id="passwField" width="200px"/>
                </row>
                <row>
                    <label id="confirmPasswLab" value="msg://confirmPassword"/>
                    <passwordField id="confirmPasswField" width="200px"/>
                </row>
            </rows>
        </grid>
        <iframe id="windowActions" screen="editWindowActions"/>
    </layout>
</window>