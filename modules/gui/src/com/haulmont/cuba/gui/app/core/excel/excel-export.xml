<window xmlns="http://schemas.haulmont.com/cuba/5.2/window.xsd"
        class="com.haulmont.cuba.gui.app.core.excel.ExcelExportOptionsWindow"
        messagesPack="com.haulmont.cuba.gui.app.core.excel"
        caption="msg://caption">

    <layout expand="tablePanel" spacing="true">
        <vbox id="tablePanel" expand="exportOptions" spacing="true">
            <label id="label1" value="msg://availableColumns" stylename="large"/>
            <optionsGroup id="exportOptions" multiselect="true" captionProperty="caption"/>
            <hbox spacing="true">
                <button id="upBtn" stylename="link"/>
                <button id="downBtn" stylename="link"/>
            </hbox>
            <label/>
            <checkBox id="exportExpandedCheckBox" caption="msg://exportExpanded"/>
        </vbox>

        <hbox id="hbox3" spacing="true">
            <button id="commitBtn"/>
            <button id="closeBtn"/>
        </hbox>
    </layout>
</window>