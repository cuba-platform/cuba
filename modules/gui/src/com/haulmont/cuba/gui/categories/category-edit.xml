<window xmlns="http://schemas.haulmont.com/cuba/5.4/window.xsd"
        class="com.haulmont.cuba.gui.categories.CategoryEditor"
        messagesPack="com.haulmont.cuba.gui.categories"
        caption="msg://editorCaption"
        datasource="categoryDs"
        focusComponent="name">

    <dsContext>
        <datasource id="categoryDs" class="com.haulmont.cuba.core.entity.Category" view="category.edit">
            <collectionDatasource id="categoryAttrsDs" property="categoryAttrs">
            </collectionDatasource>
        </datasource>
    </dsContext>

    <assign name="fieldWidth" value="theme://cuba.gui.category-edit.field.width"/>

    <layout expand="categoryAttrsFrame" spacing="true">
        <hbox id="categoryProperties" spacing="true">
            <textField width="${fieldWidth}" id="name" datasource="categoryDs" property="name" required="true"
                       requiredMessage="msg://nameRequired" caption="msg://name"/>
            <lookupField width="${fieldWidth}" id="entityType" caption="msg://entityType" required="true"
                         requiredMessage="msg://entityTypeRequired"/>
            <checkBox id="isDefault" caption="msg://isDefault"/>
        </hbox>
        <label value="msg://attributes" stylename="h2"/>

        <iframe id="categoryAttrsFrame" src="/com/haulmont/cuba/gui/categories/category-attrs-frame.xml"/>

        <iframe id="windowActions" src="/com/haulmont/cuba/gui/edit-window.actions.xml"/>
    </layout>
</window>