<window
        xmlns="http://schemas.haulmont.com/cuba/5.3/window.xsd"
        class="com.haulmont.cuba.web.app.ui.core.server.ServerBrowser">

    <metadataContext>
        <view class="com.haulmont.cuba.core.entity.Server" name="browse">
            <property name="name"/>
            <property name="address"/>
            <property name="running"/>
        </view>
    </metadataContext>

    <dsContext>
        <collectionDatasource id="servers" class="com.haulmont.cuba.core.entity.Server" view="browse">
            <query>
                select s from sys$Server s order by s.name
            </query>
        </collectionDatasource>
    </dsContext>

    <layout>
        <vbox margin="true" expand="servers_panel">
            <hbox align="MIDDLE_RIGHT">
                <button action="servers.refresh"/>
            </hbox>
            <vbox id="servers_panel" expand="servers">
                <table id="servers" editable="false">
                    <columns>
                        <column id="name" caption="msg://name"/>
                        <column id="address" caption="msg://address"/>
                        <column id="running" caption="msg://running"/>
                    </columns>
                    <rows datasource="servers"/>
                </table>
            </vbox>
        </vbox>
    </layout>
</window>
